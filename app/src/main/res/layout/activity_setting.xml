<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txt_settingt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="116dp"
            android:fontFamily="@font/black_and_white_picture"
            android:gravity="center"
            android:text="Setting"
            android:textSize="48sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_settingt"
            android:layout_centerInParent="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="57dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#7EFFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/txt_change"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_st_1"
                    android:drawablePadding="18dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Change Avatar / Background"
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#7EFFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/txt_security"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/icon"
                    android:drawablePadding="18dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Security"
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#7EFFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/txt_update_infor"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_st_3"
                    android:drawablePadding="18dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Update User Information"
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#7EFFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/ic_st_4"
                    android:drawablePadding="18dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Payment History"
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cart_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#7EFFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/ic_st_logout"
                    android:drawablePadding="18dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Log Out"
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>