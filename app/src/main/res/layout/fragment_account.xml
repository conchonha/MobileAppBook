<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26020D24">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_setting">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="42dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/avt_1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/txt_yourName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#13c8b2"
                    android:textColorHint="#13c8b2"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="46dp"
            android:layout_marginRight="30dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*">

                <TableRow>

                    <TextView android:text="Mobie" />

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:text="Birthday" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/txt_phone1"
                        android:hint="(+84)"
                        android:lineHeight="19sp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:lineHeight="19sp"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="22dp"
                        android:text="Address" />

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="22dp"
                        android:text="Job" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/txtAddress"
                        android:lineHeight="19sp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_job"
                        android:layout_marginLeft="22dp"
                        android:lineHeight="19sp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="22dp"
                        android:text="Balance" />

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="22dp"
                        android:text="VIP Access" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:lineHeight="19sp"
                        android:text="0 USD"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:lineHeight="19sp"
                        android:text="VIP 0"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_marginTop="22dp"
                        android:text="Last Activitly" />

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="22dp"
                        android:text="Date Joined" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:lineHeight="19sp"
                        android:text="3 Mounth"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_marginLeft="22dp"
                        android:lineHeight="19sp"
                        android:text="1st January, 2020"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_setting"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Setting" />
</RelativeLayout>