<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#26020D24">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avt_1"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/edt_yourName"
                android:hint="Im Yoona"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/edt_phoneNumber"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:hint="(+84) 0909 9696 969"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/edt_email"
                android:hint="yoonasnsd@gmail.com"
                android:textColor="#13c8b2"
                android:textColorHint="#13c8b2"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@id/line3"
        android:layout_marginTop="46dp"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="30dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*">
            <TableRow>
                <TextView
                    android:text="Mobie"/>
                <TextView
                    android:text="Birthday"
                    android:layout_marginLeft="22dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="(+84) 0909 9696 969"
                    android:hint="(+84) 0909 9696 969"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_marginLeft="22dp"
                    android:text="30th May, 1990"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Address"
                    android:layout_marginTop="22dp"/>
                <TextView
                    android:text="Job"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="22dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Seoul, Korea"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"/>
                <TextView
                    android:text="Singer, Actress"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"
                    android:layout_marginLeft="22dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Balance"
                    android:layout_marginTop="22dp"/>
                <TextView
                    android:text="VIP Access"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="22dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="51.643 USD"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"/>
                <TextView
                    android:text="VIP 3 (Platinum)"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"
                    android:layout_marginLeft="22dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Last Activitly"
                    android:layout_marginTop="22dp"/>
                <TextView
                    android:text="Date Joined"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="22dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="3 Days"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"/>
                <TextView
                    android:text="1st January, 2020"
                    android:textColor="#FFFFFF"
                    android:lineHeight="19sp"
                    android:textSize="15sp"
                    android:layout_marginLeft="22dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"
        android:text="Setting"
        android:background="@drawable/border_setting"/>
</RelativeLayout>