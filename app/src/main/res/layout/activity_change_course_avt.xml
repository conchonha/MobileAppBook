<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner_change_avt">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_back"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:fontFamily="@font/black_and_white_picture"
        android:id="@+id/txt_title"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Course Cover"
        android:textColor="#FFFFFF"
        android:textSize="48sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/border_change_avt">
        <TextView
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <ImageView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle_27"/>
        <TextView
            android:id="@+id/txt_2"
            android:layout_marginTop="12dp"
            android:layout_below="@id/linechange1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Image"
                android:layout_alignParentLeft="true"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">
                <Button
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="113dp"
                    android:layout_marginRight="113dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="From Library"
                    android:textAppearance="@style/CalcResultStyle"
                    android:background="@drawable/border_change"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_create_course"
        android:fontFamily="@font/black_and_white_picture"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="121dp"
        android:layout_marginRight="121dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:text="Create Course"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/CalcResultStyle"
        android:background="@drawable/border_send"/>

</RelativeLayout>