<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileappbook">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".src.page.main_activity.MainActivity"/>
        <activity android:name=".src.page.register_activity.RegisterActivity"/>
        <activity android:name=".src.page.splash_activity.StartScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.page.login_activity.LoginActivity"/>
        <activity android:name=".src.page.account_activity.AccountActivity"/>
        <activity android:name=".src.page.recover_activity.RecoverActivity"/>
    </application>

</manifest>